<view class="container">
  <!-- <view class="zan-panel-title">学生</view> -->
  <view class="doc-title zan-hairline--bottom">请填写内部手机号码</view>

  <view class="zan-cell zan-field">
    <view class="zan-cell__hd zan-field__title">手机号码</view>
    <input type="text" placeholder="输入手机号码" bindinput="bindKeyInput" value="{{value}}" class="zan-field__input zan-cell__bd" />
    <view class="zan-cell__ft">
      <button class="zan-btn zan-btn--mini zan-btn--primary">验证</button>
    </view>
  </view>
  <view class="zan-panel">
    <view class="zan-btns">
      <button class="zan-btn zan-btn--primary" bindtap="onOK">确定</button>
    </view>
  </view>
</view>